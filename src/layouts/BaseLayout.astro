---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

const {
  title = 'Madeleine Hochzeitsfotografie | Zeitlose Erinnerungen in Stuttgart',
  description = 'Moderne Hochzeitsfotografie in Stuttgart und Umgebung. Madeleine erschafft elegante, emotionale Bildgeschichten von eurem gro√üen Tag.',
  ogImage = 'https://images.unsplash.com/photo-1520854221050-0f4caff449fb?auto=format&fit=crop&w=1200&q=80'
} = Astro.props;
---
<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta name="theme-color" content="#0C0D18" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <a href="#main" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:rounded-full focus:bg-brand-raisin focus:px-4 focus:py-2 focus:text-sm focus:font-semibold focus:text-white">
      Zum Inhalt springen
    </a>
    <Navigation />
    <main id="main" class="relative">
      <slot />
    </main>
    <Footer />
  </body>
</html>
