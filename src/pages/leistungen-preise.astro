---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactCTA from '../components/ContactCTA.astro';

const meta = {
  title: 'Leistungen & Preise | Madeleine Hochzeitsfotografie',
  description:
    'Drei Hochzeitsreportage-Pakete mit klaren Leistungen, optional buchbaren Zusatzstunden und stimmigen Add-ons.'
};

const accents = {
  bloom: {
    badge: 'border-brand-bloom/30 text-brand-bloom/80',
    bullet: 'bg-brand-bloom',
    border: 'border-brand-bloom/30 shadow-[0_28px_90px_-55px_rgba(180,149,206,0.65)]'
  },
  blush: {
    badge: 'border-brand-blush/40 text-brand-blush/80',
    bullet: 'bg-brand-blush',
    border: 'border-brand-blush/35 shadow-[0_28px_90px_-55px_rgba(214,156,172,0.6)]'
  },
  cream: {
    badge: 'border-brand-cream/30 text-brand-cream/80',
    bullet: 'bg-brand-cream',
    border: 'border-brand-cream/30 shadow-[0_28px_90px_-55px_rgba(236,226,220,0.35)]'
  }
};

const packages = [
  {
    name: 'Standesamt – Kurzreportage',
    duration: 'ca. 2 Stunden',
    price: 'ab 400 €',
    accent: 'bloom',
    image: {
      src: 'https://images.unsplash.com/photo-1517841905240-472988babdf9?auto=format&fit=crop&w=1200&q=80',
      alt: 'Standesamtliches Paar bei goldenem Licht'
    },
    tagline: 'Euer Standesamt in emotionalen Bildern – inklusive Portrait- & Familienmomenten.',
    features: [
      'Begleitung Trauung + Gratulation',
      'Kurzes Paarshooting & Gruppenfotos',
      'Mind. 80–120 bearbeitete Bilder',
      'Online-Galerie (Passwort, Download für Gäste)',
      'Vorgespräch & Zeitplanung'
    ]
  },
  {
    name: 'Halbtags-Reportage',
    duration: 'ca. 6 Stunden',
    price: 'ab 800 €',
    accent: 'blush',
    image: {
      src: 'https://images.unsplash.com/photo-1521572163474-6864f9cf17ab?auto=format&fit=crop&w=1200&q=80',
      alt: 'Hochzeitspaar mit Gästen beim Sektempfang'
    },
    tagline: 'Von der Trauung bis zum Start der Feier – inkl. Preview in 48 Stunden.',
    features: [
      'Trauung, Sektempfang, Paar- & Gruppenfotos, Beginn der Feier',
      'Mind. 250–400 bearbeitete Bilder',
      'Online-Galerie + optional USB',
      'Vorgespräch & Zeitplanung (inkl. Ablaufhilfe)',
      'Preview in 48 h (10–20 Bilder)'
    ]
  },
  {
    name: 'Ganztag',
    duration: 'ca. 10 Stunden',
    price: 'ab 1.500 €',
    accent: 'cream',
    featured: true,
    image: {
      src: 'https://images.unsplash.com/photo-1525182008055-f88b95ff7980?auto=format&fit=crop&w=1200&q=80',
      alt: 'Brautpaar tanzt während der Abendfeier'
    },
    tagline: 'Getting Ready bis Party – vollständige Reportage mit Storytelling.',
    features: [
      'Getting Ready bis Party / Eröffnungstanz',
      'Mind. 500+ bearbeitete Bilder',
      'Online-Galerie + USB in Box',
      'Vorgespräch, Timeline-Check, Location-Scouting',
      'Preview in 48 h (15–30 Bilder)'
    ]
  }
];

const extraHour = {
  name: 'Zusätzliche Stunde',
  price: 'ab ___ €',
  description: 'Flexibel zubuchbar, wenn euer Tagesablauf mehr Zeit benötigt (nach Verfügbarkeit).'
};

const included = [
  'Persönliches Vorgespräch (Video-Call), Ablaufhilfe & Checklisten',
  'Sichere Technik (2 Kameras, doppelte Karten), Datensicherung',
  'Bildauswahl & Bearbeitung aller gelungenen Motive',
  'Private Nutzungsrechte (Druck & Web, ohne Wasserzeichen)',
  'Online-Galerie zum Teilen (___ Monate verfügbar)'
];

const addons = [
  {
    name: 'Fotobox / Gästebox',
    price: 'ab ___ €',
    image: {
      src: 'https://images.unsplash.com/photo-1529688530641-371b31d2cb1d?auto=format&fit=crop&w=1200&q=80',
      alt: 'Fotobox mit Requisiten und Beleuchtung'
    },
    details: [
      'Aufbau inkl. Requisiten, Druck/Download',
      'Optional Betreuung',
      'Perfekt für Party & Gästebuch'
    ]
  },
  {
    name: 'Drohnenaufnahmen',
    price: 'ab ___ €',
    image: {
      src: 'https://images.unsplash.com/photo-1508610048659-a06b669e3321?auto=format&fit=crop&w=1200&q=80',
      alt: 'Drohne, die über einer Landschaft schwebt'
    },
    details: [
      'Luftbilder eurer Location & Gruppen',
      'Nur bei geeigneter Witterung & Genehmigung',
      'Inkl. Haftpflicht & Sicherheitscheck'
    ]
  },
  {
    name: 'Hochzeitsalbum (Fine-Art)',
    price: 'ab ___ €',
    image: {
      src: 'https://images.unsplash.com/photo-1519681393784-d120267933ba?auto=format&fit=crop&w=1200&q=80',
      alt: 'Handgefertigtes Hochzeitsalbum auf einem Tisch'
    },
    details: [
      'Handgefertigt, 30–40 Seiten',
      'Individuelles Layout, Auswahl in der Galerie',
      'Cover-Optionen & Personalisierung'
    ]
  },
  {
    name: 'Zweitfotograf:in',
    price: 'ab ___ €',
    image: {
      src: 'https://images.unsplash.com/photo-1518895949257-7621c3c786d4?auto=format&fit=crop&w=1200&q=80',
      alt: 'Zwei Fotograf:innen arbeiten gemeinsam'
    },
    details: [
      'Mehr Perspektiven, parallel bei Getting Ready',
      'Sinnvoll bei >100 Gästen oder großer Location'
    ]
  },
  {
    name: 'Engagement-Shooting',
    price: 'ab ___ €',
    image: {
      src: 'https://images.unsplash.com/photo-1520854221050-0f4caff449fb?auto=format&fit=crop&w=1200&q=80',
      alt: 'Verlobungspaar in städtischer Umgebung'
    },
    details: [
      '60–90 Min., perfekte Vorbereitung',
      'Bilder für Einladungen / Website'
    ]
  },
  {
    name: 'Express-Galerie 7 Tage',
    price: 'ab ___ €',
    image: {
      src: 'https://images.unsplash.com/photo-1517433456452-f9633a875f6f?auto=format&fit=crop&w=1200&q=80',
      alt: 'Laptop mit geöffneter Fotogalerie'
    },
    details: [
      'Beschleunigte Auslieferung der Vollgalerie',
      'Preview in 48 h ist in vielen Paketen enthalten'
    ]
  }
];

const steps = [
  {
    title: 'Kennenlernen',
    description: 'Video-Call oder Treffen in Stuttgart – wir stimmen eure Wünsche und Prioritäten ab.'
  },
  {
    title: 'Planung',
    description: 'Ihr wählt euer Paket, ich unterstütze mit Ablaufhilfe, Checklisten und verbindlicher Planung.'
  },
  {
    title: 'Reportage',
    description: 'Am Hochzeitstag begleite ich euch strukturiert & unaufdringlich; ein Preview erreicht euch nach 48 Stunden.'
  }
];
---
<BaseLayout title={meta.title} description={meta.description}>
  <section class="relative isolate overflow-hidden bg-gradient-to-b from-brand-night via-brand-midnight/95 to-brand-night/90 pt-32 pb-24">
    <div class="absolute inset-x-0 -top-40 mx-auto h-72 w-72 rounded-full bg-brand-bloom/25 blur-3xl"></div>
    <div class="absolute inset-x-0 -bottom-40 mx-auto h-64 w-64 rounded-full bg-brand-blush/25 blur-3xl"></div>
    <div class="relative mx-auto max-w-4xl px-6 text-center text-brand-cream">
      <span class="section-title inline-flex items-center justify-center rounded-full border border-white/10 bg-white/5 px-5 py-2 text-xs uppercase tracking-[0.4em] text-brand-bloom/75">
        Leistungen & Preise
      </span>
      <h1 class="mt-8 font-display text-4xl leading-tight sm:text-5xl lg:text-6xl">
        Drei Pakete. Ein Stil. Eure Geschichte in Bildern.
      </h1>
      <p class="mx-auto mt-6 max-w-2xl text-base text-brand-cream/70 sm:text-lg">
        Wählt das Paket, das zu eurem Tagesablauf passt, ergänzt bei Bedarf Zusatzstunden oder Add-ons und vertraut auf eine ruhige, strukturierte Begleitung.
      </p>
      <div class="mt-10 flex flex-wrap justify-center gap-4 text-sm">
        <a href="/kontakt#anfrage" class="btn-primary">Verfügbarkeit prüfen</a>
        <a href="/portfolio" class="btn-outline">Reportagen ansehen</a>
      </div>
    </div>
  </section>

  <section class="bg-brand-night/95 py-24">
    <div class="mx-auto max-w-6xl px-6">
      <div class="md:flex md:items-end md:justify-between">
        <div class="max-w-xl text-brand-cream">
          <p class="text-xs uppercase tracking-[0.45em] text-brand-bloom/70">Paketübersicht</p>
          <h2 class="mt-4 font-display text-3xl sm:text-4xl">Drei Reportagen – flexibel erweiterbar</h2>
          <p class="mt-5 text-brand-cream/70">
            Alle Pakete enthalten eine sichere Vorbereitung, klare Absprachen und Bildbearbeitung in Madeleines Stil. Je nach Tagesplanung könnt ihr Zusatzstunden oder Add-ons ergänzen.
          </p>
        </div>
        <a href="/kontakt#anfrage" class="btn-secondary mt-8 text-sm md:mt-0">Paketberatung anfragen</a>
      </div>

      <div class="mt-16 grid gap-10 md:grid-cols-2 lg:grid-cols-3">
        {packages.map((pkg) => {
          const accent = accents[pkg.accent];
          const featureGridClass = pkg.features.length > 3 ? 'lg:grid-cols-2' : '';

          return (
            <article
              class={`group flex h-full flex-col overflow-hidden rounded-[2.25rem] border border-white/10 bg-brand-midnight/80 text-brand-cream shadow-[0_26px_90px_-55px_rgba(15,16,27,0.85)] backdrop-blur ${
                accent?.border ?? ''
              }`}
            >
              {pkg.image && (
                <figure class="relative h-48 w-full overflow-hidden sm:h-56">
                  <img
                    src={pkg.image.src}
                    alt={pkg.image.alt ?? pkg.name}
                    class="h-full w-full object-cover transition-transform duration-500 ease-out group-hover:scale-105"
                    loading="lazy"
                  />
                  <div class="pointer-events-none absolute inset-0 bg-gradient-to-t from-brand-midnight/75 via-transparent"></div>
                </figure>
              )}
              <div class="flex h-full flex-col gap-6 px-8 py-10 sm:px-10 sm:py-12">
                <div class="flex flex-wrap items-start justify-between gap-4">
                  <div>
                    {pkg.featured && (
                      <span class="inline-flex items-center rounded-full border border-brand-bloom/30 bg-brand-bloom/10 px-3 py-1 text-[0.65rem] font-semibold uppercase tracking-[0.35em] text-brand-bloom">
                        Beliebtestes Paket
                      </span>
                    )}
                    <p class="mt-3 text-xs uppercase tracking-[0.45em] text-brand-cream/55">{pkg.duration}</p>
                    <h3 class="mt-2 font-display text-[1.9rem] leading-tight sm:text-[2.2rem]">{pkg.name}</h3>
                  </div>
                  <span
                    class={`rounded-full border px-4 py-1.5 text-sm font-semibold ${
                      accent?.badge ?? 'border-brand-cream/30 text-brand-cream/80'
                    }`}
                  >
                    {pkg.price}
                  </span>
                </div>

                {pkg.tagline && (
                  <p class="text-sm text-brand-cream/70 sm:text-base">{pkg.tagline}</p>
                )}

                <ul class="mt-6 space-y-3 text-sm text-brand-cream/80 sm:text-[0.95rem]">
                  {pkg.features.map((feature) => (
                    <li class="flex items-start gap-3">
                      <span class={`mt-1 inline-flex h-2 w-2 flex-none rounded-full ${
                        accent?.bullet ?? 'bg-brand-cream'
                      }`}></span>
                      <span>{feature}</span>
                    </li>
                  ))}
                </ul>

                <div class="mt-auto flex flex-wrap gap-3 text-sm">
                  <a href="/kontakt#anfrage" class="btn-primary">Anfrage senden</a>
                  <a href="/ueber-mich" class="btn-outline">Madeleine kennenlernen</a>
                </div>
              </div>
            </article>
          );
        })}
      </div>

      <div class="mt-10 rounded-[2.25rem] border border-brand-bloom/25 bg-brand-midnight/80 px-8 py-10 text-brand-cream shadow-[0_24px_70px_-50px_rgba(15,16,27,0.8)] backdrop-blur">
        <div class="flex flex-wrap items-center justify-between gap-6">
          <div>
            <h3 class="font-display text-2xl">Zusätzliche Stunde</h3>
            <p class="mt-3 max-w-2xl text-sm text-brand-cream/75 sm:text-base">{extraHour.description}</p>
          </div>
          <span class="inline-flex items-center rounded-full border border-brand-bloom/30 px-5 py-2 text-sm font-semibold uppercase tracking-[0.35em] text-brand-bloom">
            {extraHour.price}
          </span>
        </div>
      </div>
    </div>
  </section>

  <section class="bg-brand-midnight py-24">
    <div class="mx-auto max-w-5xl px-6">
      <div class="rounded-3xl border border-white/10 bg-brand-night/80 p-12 text-brand-cream shadow-[0_26px_90px_-56px_rgba(15,16,27,0.85)] md:p-16">
        <div class="max-w-3xl">
          <span class="inline-flex items-center rounded-full border border-brand-bloom/25 bg-brand-bloom/10 px-4 py-1 text-[0.65rem] font-semibold uppercase tracking-[0.35em] text-brand-bloom/75">
            Inklusive
          </span>
          <h2 class="mt-4 font-display text-3xl sm:text-4xl">Das ist immer dabei</h2>
          <p class="mt-4 text-brand-cream/70">
            Von der ersten Idee bis zur fertigen Galerie begleite ich euch strukturiert, aufmerksam und mit sicherer Technik. Diese Leistungen sind in jeder Reportage enthalten.
          </p>
        </div>
        <ul class="mt-12 grid gap-6 sm:grid-cols-2">
          {included.map((item) => (
            <li class="group relative overflow-hidden rounded-2xl border border-white/10 bg-gradient-to-br from-white/5 via-brand-midnight/60 to-brand-night/80 px-6 py-5 text-sm text-brand-cream/80 transition duration-300 hover:-translate-y-1 hover:border-brand-bloom/40">
              <div class="flex items-start gap-4">
                <span class="mt-0.5 inline-flex h-8 w-8 flex-none items-center justify-center rounded-full bg-brand-bloom/20 text-brand-bloom">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke-width="1.5" stroke="currentColor" class="h-4 w-4">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                  </svg>
                </span>
                <span class="leading-relaxed">{item}</span>
              </div>
              <span class="pointer-events-none absolute inset-x-0 bottom-0 h-1 bg-gradient-to-r from-brand-bloom/60 via-brand-blush/50 to-transparent opacity-0 transition duration-300 group-hover:opacity-100"></span>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </section>

  <section class="bg-brand-night/95 py-24">
    <div class="mx-auto max-w-6xl px-6">
      <div class="max-w-2xl text-brand-cream">
        <p class="text-xs uppercase tracking-[0.45em] text-brand-bloom/70">Add-ons</p>
        <h2 class="mt-4 font-display text-3xl sm:text-4xl">Optional buchbare Ergänzungen</h2>
        <p class="mt-5 text-brand-cream/70">
          Mit diesen Add-ons erweitert ihr eure Reportage gezielt – vom Engagement-Shooting bis zum handgefertigten Album. Preise bitte nach euren Konditionen ergänzen.
        </p>
      </div>
      <div class="mt-14 grid gap-8 md:grid-cols-2 xl:grid-cols-3">
        {addons.map((addon) => (
          <article class="group flex h-full flex-col overflow-hidden rounded-[2.25rem] border border-white/10 bg-brand-midnight/80 text-brand-cream shadow-[0_24px_70px_-50px_rgba(15,16,27,0.85)]">
            {addon.image && (
              <figure class="relative h-48 w-full overflow-hidden sm:h-52">
                <img
                  src={addon.image.src}
                  alt={addon.image.alt ?? addon.name}
                  class="h-full w-full object-cover transition-transform duration-500 ease-out group-hover:scale-105"
                  loading="lazy"
                />
                <div class="pointer-events-none absolute inset-0 bg-gradient-to-t from-brand-midnight/70 via-transparent"></div>
              </figure>
            )}
            <div class="flex h-full flex-col gap-6 px-8 py-10">
              <div class="flex items-baseline justify-between gap-4">
                <h3 class="font-display text-xl">{addon.name}</h3>
                <span class="rounded-full border border-brand-cream/30 px-4 py-1 text-xs font-semibold uppercase tracking-[0.35em] text-brand-cream/70">
                  {addon.price}
                </span>
              </div>
              <ul class="space-y-3 text-sm text-brand-cream/75">
                {addon.details.map((detail) => (
                  <li class="flex items-start gap-3">
                    <span class="mt-1 inline-flex h-2.5 w-2.5 flex-none rounded-full bg-brand-blush"></span>
                    <span>{detail}</span>
                  </li>
                ))}
              </ul>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <section class="bg-brand-midnight py-24">
    <div class="mx-auto max-w-5xl px-6 text-brand-cream">
      <div class="rounded-3xl border border-white/10 bg-brand-night/85 p-12 shadow-[0_24px_70px_-50px_rgba(15,16,27,0.8)]">
        <div class="max-w-3xl">
          <h2 class="font-display text-3xl sm:text-4xl">So läuft unsere Zusammenarbeit</h2>
          <p class="mt-4 text-brand-cream/70">
            Drei Schritte, damit ihr euch entspannt zurücklehnen könnt – vom Kennenlernen bis zur fertigen Galerie.
          </p>
        </div>
        <div class="mt-10 grid gap-10 sm:grid-cols-3">
          {steps.map((step, index) => (
            <div class="flex flex-col items-center text-center">
              <div class="flex h-12 w-12 items-center justify-center rounded-full border border-brand-bloom/40 text-sm font-semibold text-brand-bloom">
                {index + 1}
              </div>
              <h3 class="mt-4 text-base font-semibold text-brand-cream">{step.title}</h3>
              <p class="mt-3 text-sm text-brand-cream/70">{step.description}</p>
            </div>
          ))}
        </div>
        <div class="mt-10 flex flex-wrap gap-4">
          <a href="/kontakt#anfrage" class="btn-primary">Jetzt Kennenlernen anfragen</a>
          <a href="/portfolio" class="btn-outline">Reportagen entdecken</a>
        </div>
      </div>
    </div>
  </section>

  <ContactCTA />
</BaseLayout>
